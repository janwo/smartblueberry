{
  "name": "smartblueberry",
  "description": "Smart Blueberry is a Home Assistant environment providing multiple extensions to simplify the configuration of light, presence and irrigation management.",
  "scripts": {
    "frontend:build": "npm run frontend:build:icons && ./node_modules/.bin/ng build",
    "frontend:build:icons": "mkdir -p ./frontend/src/tmp/assets && node ./frontend/scripts/generate-svg-icons.js",
    "frontend:build:locale": "./node_modules/.bin/ng extract-i18n",
    "frontend:serve": "npm run frontend:build:icons && ng serve --host 0.0.0.0 --port 4200",
    "backend:build": "tsc --project backend/tsconfig.json",
    "backend:start": "node dist/backend/index.js",
    "backend:debug": "npm run backend:build && node --inspect=0.0.0.0:9229 dist/backend/index.js",
    "backend:serve": "nodemon -e ts --watch backend --exec \"npm run backend:debug\""
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.7",
    "@angular/common": "^16.2.7",
    "@angular/compiler": "^16.2.7",
    "@angular/core": "^16.2.7",
    "@angular/forms": "^16.2.7",
    "@angular/localize": "^16.2.7",
    "@angular/platform-browser": "^16.2.7",
    "@angular/platform-browser-dynamic": "^16.2.7",
    "@angular/router": "^16.2.7",
    "@hapi/accept": "^6.0.2",
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "^3.2.0",
    "bulma": "^0.9.4",
    "cryptr": "^6.3.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "home-assistant-js-websocket": "^8.2.0",
    "human-interval": "^2.0.1",
    "joi": "^17.10.2",
    "ng2-charts": "^5.0.3",
    "node-json-db": "^2.2.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "ws": "^8.14.2",
    "zone.js": "^0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.4",
    "@angular/cli": "^16.2.4",
    "@angular/compiler-cli": "^16.2.7",
    "@types/hapi__inert": "^5.2.7",
    "@types/hapi__jwt": "^2.0.3",
    "@types/node": "^20.8.2",
    "@types/ws": "^8.5.6",
    "eva-icons": "^1.1.3",
    "fast-xml-parser": "^4.3.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}