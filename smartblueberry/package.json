{
  "name": "smartblueberry",
  "description": "Smart Blueberry is a Home Assistant environment providing multiple extensions to simplify the configuration of light, presence and irrigation management.",
  "scripts": {
    "frontend:build": "npm run frontend:build:icons && ./node_modules/.bin/ng build",
    "frontend:build:icons": "mkdir -p ./frontend/src/tmp/assets && node ./frontend/scripts/generate-svg-icons.js",
    "frontend:build:locale": "./node_modules/.bin/ng extract-i18n",
    "frontend:serve": "npm run frontend:build:icons && ng serve --host 0.0.0.0 --port 4200",
    "backend:build": "tsc --project backend/tsconfig.json",
    "backend:start": "node dist/backend/index.js",
    "backend:debug": "npm run backend:build && node --inspect=0.0.0.0:9229 dist/backend/index.js",
    "backend:serve": "nodemon -e ts --watch backend --exec \"npm run backend:debug\""
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.4",
    "@angular/common": "^18.0.4",
    "@angular/compiler": "^18.0.4",
    "@angular/core": "^18.0.4",
    "@angular/forms": "^18.0.4",
    "@angular/localize": "^18.0.4",
    "@angular/platform-browser": "^18.0.4",
    "@angular/platform-browser-dynamic": "^18.0.4",
    "@angular/router": "^18.0.4",
    "@hapi/accept": "^6.0.3",
    "@hapi/hapi": "^21.3.10",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "^3.2.0",
    "bulma": "^1.0.1",
    "cryptr": "^6.3.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "home-assistant-js-websocket": "^9.4.0",
    "human-interval": "^2.0.1",
    "joi": "^17.13.3",
    "ng2-charts": "^6.0.1",
    "node-json-db": "^2.3.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.3",
    "ws": "^8.17.1",
    "zone.js": "^0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.5",
    "@angular/cli": "^18.0.5",
    "@angular/compiler-cli": "^18.0.4",
    "@types/hapi__inert": "^5.2.10",
    "@types/hapi__jwt": "^2.0.5",
    "@types/node": "^20.14.8",
    "@types/ws": "^8.5.10",
    "eva-icons": "^1.1.3",
    "fast-xml-parser": "^4.4.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}