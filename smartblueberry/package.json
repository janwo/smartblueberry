{
  "name": "smartblueberry",
  "scripts": {
    "frontend:serve": "npm run frontend:build:icons && ng serve --host 0.0.0.0 --port 4200",
    "frontend:build": "npm run frontend:build:icons && ng build",
    "frontend:build:icons": "mkdir -p ./frontend/tmp/assets && node ./frontend/scripts/generate-svg-icons.js",
    "frontend:build:locale": "ng extract-i18n",
    "backend:start": "npm run backend:build && npm run backend:start:build",
    "backend:start:build": "node dist/backend/index.js",
    "backend:build": "tsc --project backend/tsconfig.json",
    "backend:serve": "nodemon -e ts --watch backend --exec \"npm run backend:start\""
  },
  "type": "module",
  "exports": "./dist/index.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.2",
    "@angular/common": "^16.1.2",
    "@angular/compiler": "^16.1.2",
    "@angular/core": "^16.1.2",
    "@angular/forms": "^16.1.2",
    "@angular/localize": "^16.1.2",
    "@angular/platform-browser": "^16.1.2",
    "@angular/platform-browser-dynamic": "^16.1.2",
    "@angular/router": "^16.1.2",
    "@hapi/accept": "^6.0.1",
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/jwt": "^3.2.0",
    "@types/ws": "^8.5.5",
    "bulma": "^0.9.4",
    "cryptr": "^6.2.0",
    "dayjs": "^1.11.8",
    "dotenv": "^16.3.1",
    "home-assistant-js-websocket": "^8.0.1",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "ng2-charts": "^4.1.1",
    "node-json-db": "^2.2.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.5.3",
    "uuid": "^9.0.0",
    "ws": "^8.13.0",
    "yaml": "^2.3.1",
    "zone.js": "^0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.1",
    "@angular/cli": "^16.1.1",
    "@angular/compiler-cli": "^16.1.2",
    "@types/hapi__inert": "^5.2.6",
    "@types/hapi__jwt": "^2.0.2",
    "@types/node": "^20.3.1",
    "@types/uuid": "^9.0.2",
    "eva-icons": "^1.1.3",
    "fast-xml-parser": "^4.2.5",
